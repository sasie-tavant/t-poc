<h1>Teams</h1>

<div class="booking-status">
  <%= form_tag(teams_path, method: :get) do %>
      <div class="fm-elements last">
        <div class="filter" style="padding-bottom: 10px; float: right;">
          <label>Search</label>
          <%= text_field_tag :search, params[:search], onchange: 'this.form.submit();' %>
        </div>
        <!--<div class="by-status">-->
        <!--<input type="button" value="Search" class="go">-->
        <!--</div>-->
      </div>
  <% end %>
</div>

<table class="table table-striped table-responsive">
  <thead>
  <tr>
    <th>Livery</th>
    <th>Name</th>
    <th>Constructor</th>
    <th>Podiums</th>
    <th>Driver1</th>
    <th>Driver2</th>
    <th>Titles</th>
    <th colspan="2" style="text-align: center">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% if @teams.empty? %>
      <tr>
        <td colspan="9">There's no records to display, to create a new team click the link below!</td>
      </tr>
  <% else %>
      <% @teams.each do |team| %>
          <tr>
            <td><%= image_tag(team.livery_url(:small)) %></td>
            <td><%= link_to team.name.titleize, team %></td>
            <td><%= team.constructor %></td>
            <td><%= team.podiums %></td>
            <td><%= team.driver1 %></td>
            <td><%= team.driver2 %></td>
            <td><%= team.titles %></td>
            <td><%= link_to 'Edit', edit_team_path(team) %></td>
            <td><%= link_to 'Destroy', team, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
<%= will_paginate @teams %>
<br>
<%= link_to 'New Team', new_team_path %>
